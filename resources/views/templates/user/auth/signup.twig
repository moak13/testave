{% extends 'templates/user/app.twig' %}

{% block content %}
	<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign Up</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path_for('user_auth.signup') }}" method="POST">
                        <input name="{{csrf.valueKey}}" type="hidden" value="{{csrf.value}}">
                        <input name="{{csrf.nameKey}}" type="hidden" value="{{csrf.name}}">
                            <fieldset>
                                <div class="form-group{{ errors.regno ? 'has-error' : '' }}">
                                    <input class="form-control" placeholder="Reg. No." name="regno" type="text" autofocus>
                                    {% if errors.regno %}
                                		<span class="help-block">{{ errors.regno | first }}</span>
                                	{% endif %}
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <a type="submit" class="btn btn-lg btn-success btn-block">Sign Up</a>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-footer">
                    	<a href=" {{ base_url() }}">&lt; Back to site</a>
                	</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}